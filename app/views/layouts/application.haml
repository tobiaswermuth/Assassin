!!!
%html
  %head
    %title Assassin Game
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css", :integrity => "sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd", :rel => "stylesheet"}/
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
  %body
    %nav.navbar.navbar-dark.bg-primary.not-rounded
      .nav.navbar-nav
        %a.nav-item.nav-link{:href => "/"}
          %img.img-invert{:src => image_url('flaticon/home.png'), :style => "max-width: 26px;"}
        .nav-item
          .navbar-brand{:style => "font-weight: 300;"}
            =@title || "Assassin"
    .container{:style => "padding-top: 10px; padding-bottom: 50px;"}
      = yield
    %nav.navbar.navbar-fixed-bottom.navbar-light.bg-faded.text-center{:style => "font-weight: 200;"}
      %a{:href => "/about"} About
      %a{:href => "/terms", :style => "padding-left: 20px;"} Terms & Conditions
      %a{:href => "/privacy", :style => "padding-left: 20px;"} Privacy Policy
